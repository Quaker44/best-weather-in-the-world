import pandas as pd
from scipy.stats import rankdata

# Load your data into a DataFrame
df = pd.read_csv('/home/sam/PycharmProjects/best-weather-in-the-world/Final_Rankings_72.csv')

# Calculate the rank for each "Annual Average Weatherscore"
df['Rank'] = rankdata(df['Weighted Average Weatherscore'], method='min')

# Calculate the percentile for each rank
df['Percentile'] = df['Rank'] / len(df['Weighted Average Weatherscore']) * 100

# Save the updated DataFrame to a new CSV file
df.to_csv('percentiles 72', index=False)

print("Percentiles have been assigned and saved to 'updated_data_with_percentiles.csv'.")
